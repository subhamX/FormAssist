<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Form Assist || View Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header>
        <div id="header">Form Assist</div>
    </header>
    <section class="metadata">
        <div class='first'><span class='formhead'>FORM NAME -</span> <span class='fieldName'>{{formName}}</span></div>
        <div><span class='formhead'>FORM TYPE -</span> <span class='fieldName'>{{bankFormName}}</span></div>
    </section>
    <section class="table-wrapper">
        {{#each sections}}
        <div class="sectionname">{{section_name}}</div>
        <table class="striped" class="highlight" class="responsive-table">
            <thead>
                <tr>
                    <th>Field Name</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                {{#each fields}}
                <tr>
                    <td>{{tag}}</td>
                    <td>{{value}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/each}}
    </section>

</body>

</html>